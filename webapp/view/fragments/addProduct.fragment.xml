<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
>
    <Dialog
        id="addProductDialogId"
        title="Add New Product"
        draggable="true"
        resizable="true"
    >
        <content>
            <form:SimpleForm
                id="addProductFormInObjectPageId"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanL="4"
                labelSpanM="4"
                columnsL="2"
                columnsM="1"
            >
                <Label text="Product ID" />
                <Input
                    id="oPProductId"
                    type="Number"
                    placeholder="Enter Product ID"
                />

                <Label text="Product Name" />
                <Input
                    id="oPProductNameId"
                    placeholder="Enter Product Name"
                />

                <Label text="Product Description" />
                <Input
                    id="oPProductDescriptionId"
                    placeholder="Enter Product Description"
                />

                <Label text="Quantity per Unit" />
                <Input
                    id="oPProductQuantityId"
                    placeholder="e.g. 10 boxes x 20 bags"
                />

                <Label text="Unit Price" />
                <Input
                    id="oPProductPriceId"
                    type="Number"
                    placeholder="Enter Unit Price"
                />

                <Label text="Units in Stock" />
                <Input
                    id="oPProductStockId"
                    type="Number"
                    placeholder="Enter Units in Stock"
                />
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button
                id="saveProductButtonId"
                text="Save"
                press="onPressSaveSupplier"
                type="Emphasized"
                icon="sap-icon://save"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onPressCancelSupplier"
                type="Negative"
                icon="sap-icon://cancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
